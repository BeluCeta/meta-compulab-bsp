+
+&iomuxc {
+	sb-ucm-imx8 {
+		pinctrl_i2c4: i2c4grp {
+			fsl,pins = <
+				MX8MQ_IOMUXC_I2C4_SCL_I2C4_SCL	0x4000007f
+				MX8MQ_IOMUXC_I2C4_SDA_I2C4_SDA	0x4000007f
+			>;
+		};
+    };
+};
+
+&pwm2 {
+    status = "disabled";
+};
+
+&wm8731 {
+    status = "disabled";
+};
+
+&i2c4 {
+    clock-frequency = <400000>;
+    pinctrl-names = "default";
+    pinctrl-0 = <&pinctrl_i2c4>;
+    status = "okay";
+
+	wm8731@1a {
+		#sound-dai-cells = <0>;
+		compatible = "wlf,wm8731";
+		reg = <0x1a>;
+		status = "okay";
+	};
+};
