From bd6a836dbde640510525599fe23b133cea22faf4 Mon Sep 17 00:00:00 2001
From: Valentin Raevsky <valentin@compulab.co.il>
Date: Thu, 11 Oct 2018 13:57:53 +0300
Subject: [PATCH 79/86] sb-ucm-imx8: Fix pca95xx setings, add sbc_i2c_lvds
 alias

Signed-off-by: Valentin Raevsky <valentin@compulab.co.il>
---
 arch/arm64/boot/dts/compulab/sb-ucm-imx8.dtsi | 14 ++++----------
 1 file changed, 4 insertions(+), 10 deletions(-)

diff --git a/arch/arm64/boot/dts/compulab/sb-ucm-imx8.dtsi b/arch/arm64/boot/dts/compulab/sb-ucm-imx8.dtsi
index d252f00..8c8a078 100644
--- a/arch/arm64/boot/dts/compulab/sb-ucm-imx8.dtsi
+++ b/arch/arm64/boot/dts/compulab/sb-ucm-imx8.dtsi
@@ -16,13 +16,7 @@
 	sb-ucm-imx8 {
 		pinctrl_pca95xx: pca95xx {
 			fsl,pins = <
-				MX8MQ_IOMUXC_NAND_WE_B_GPIO3_IO17	0xC0
-			>;
-		};
-		pinctrl_i2c4: i2c4grp {
-			fsl,pins = <
-				MX8MQ_IOMUXC_I2C4_SCL_I2C4_SCL	0x4000007f
-				MX8MQ_IOMUXC_I2C4_SDA_I2C4_SDA	0x4000007f
+		        MX8MQ_IOMUXC_GPIO1_IO15_GPIO1_IO15 0x16
 			>;
 		};
     };
@@ -47,8 +41,8 @@
 		gpio-controller;
 		#gpio-cells = <2>;
 		/* Role #1 */
-		interrupt-parent = <&gpio3>;
-		interrupts = <17 0x1>;
+		interrupt-parent = <&gpio1>;
+		interrupts = <15 0x1>;
 		interrupt-controller;
 		#interrupt-cells = <2>;
 		/* Bus address */
@@ -70,7 +64,7 @@
     status = "disabled";
 };
 
-&i2c4 {
+sbc_i2c_lvds: &i2c4 {
     clock-frequency = <400000>;
     pinctrl-names = "default";
     pinctrl-0 = <&pinctrl_i2c4>;
-- 
