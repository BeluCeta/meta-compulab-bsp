From 12b39d67bbaa84a620644028a2be9a00359067b0 Mon Sep 17 00:00:00 2001
From: Valentin Raevsky <valentin@compulab.co.il>
Date: Wed, 3 Oct 2018 17:11:22 +0300
Subject: [PATCH 74/74] sb-ucm-imx8: dts: Add WiFi enabled dts

Signed-off-by: Valentin Raevsky <valentin@compulab.co.il>
---
 arch/arm64/boot/dts/compulab/Makefile              |  1 +
 arch/arm64/boot/dts/compulab/sbc-ucm-imx8-wifi.dts | 34 ++++++++++++++++++++++
 2 files changed, 35 insertions(+)
 create mode 100644 arch/arm64/boot/dts/compulab/sbc-ucm-imx8-wifi.dts

diff --git a/arch/arm64/boot/dts/compulab/Makefile b/arch/arm64/boot/dts/compulab/Makefile
index 056930b..cd2bdb9 100644
--- a/arch/arm64/boot/dts/compulab/Makefile
+++ b/arch/arm64/boot/dts/compulab/Makefile
@@ -5,6 +5,7 @@ dtb-$(CONFIG_ARCH_FSL_IMX8MQ) += cl-som-imx8-dual.dtb
 dtb-$(CONFIG_ARCH_FSL_IMX8MQ) += sbc-imx8.dtb
 dtb-$(CONFIG_ARCH_FSL_IMX8MQ) += ucm-imx8.dtb
 dtb-$(CONFIG_ARCH_FSL_IMX8MQ) += sbc-ucm-imx8.dtb
+dtb-$(CONFIG_ARCH_FSL_IMX8MQ) += sbc-ucm-imx8-wifi.dtb
 
 always		:= $(dtb-y)
 subdir-y	:= $(dts-dirs)
diff --git a/arch/arm64/boot/dts/compulab/sbc-ucm-imx8-wifi.dts b/arch/arm64/boot/dts/compulab/sbc-ucm-imx8-wifi.dts
new file mode 100644
index 0000000..45d89e4
--- /dev/null
+++ b/arch/arm64/boot/dts/compulab/sbc-ucm-imx8-wifi.dts
@@ -0,0 +1,34 @@
